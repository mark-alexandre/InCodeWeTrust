{% extends 'admin/base.html.twig' %}

{% block title %}Doclib - Doctor workspace{% endblock %}

{% block body %}

    <!-- MAIN -->
    <div class="main">
        <!-- MAIN CONTENT -->
        <div class="main-content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-md-12">
                        <div class="panel">
                            <div class="panel-heading">
                                    <h3 class="panel-title">Talks with patients</h3>
                                <div class="right">
                                    <button type="button" class="btn-toggle-collapse"><i class="lnr lnr-chevron-up"></i></button>
                                    <button type="button" class="btn-remove"><i class="lnr lnr-cross"></i></button>
                                </div>
                            </div>
                            <div class="panel-body no-padding">

                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>Patient name</th>
                                        <th>Disease type</th>
                                        <th>Messages</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                        {% if doctor.patients is empty %}
                                            <tr> No patient</tr>
                                        {% endif %}
                                        {% for patient in doctor.patients %}
                                            {{ dump(patient.disease) }}
                                            <tr>
                                                <td>{{ patient.name }}</td>
                                                <td>{{ patient.disease }}</td>
                                                <td><a href="{{ path('admin_messages', { 'id' : patient.id })
                                                    }}"><span class="label label-success">Check messages</span></a></td>
                                            </tr>
                                        {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col-md-6"><span class="panel-note"><i class="fa fa-clock-o"></i> Last 24 hours</span></div>
                                    <div class="col-md-6 text-right"><a href="#" class="btn btn-primary">
                                            Back to home</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    </div>
    <!-- END MAIN CONTENT -->
    </div>
    <!-- END MAIN -->

{% endblock %}