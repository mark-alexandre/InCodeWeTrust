{% extends 'admin/base.html.twig' %}
{% block title %}Treatment{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="container">
            <h1>Treatments</h1>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Grammage</th>
                    <th scope="col">Frequency</th>
                    <th scope="col">Delete treatment</th>
                </tr>
                </thead>
                <tbody>

                {% for drug in drugs %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ drug.name }}</td>
                        <td>{{ drug.grammage }}</td>
                        <td>{{ drug.frequency }}</td>
                        <td>{{ include('admin/drugs/_delete_form.html.twig') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('drugs_new', {id:patient.id}) }}"><button type="button"> Add treatment </button></a>
        </div>
    </div>
{% endblock %}
