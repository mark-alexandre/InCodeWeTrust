<!DOCTYPE html>

<title>Drugs index</title>

{% block body %}
    <h1>Drugs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Grammage</th>
                <th>Frequency</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for drug in drugs %}
            <tr>
                <td>{{ drug.id }}</td>
                <td>{{ drug.name }}</td>
                <td>{{ drug.grammage }}</td>
                <td>{{ drug.frequency }}</td>
                <td>
                    <a href="{{ path('drugs_show', {'id': drug.id}) }}">show</a>
                    <a href="{{ path('drugs_edit', {'id': drug.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('drugs_new') }}">Create new</a>
{% endblock %}
