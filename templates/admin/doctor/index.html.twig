{% extends 'admin/base.html.twig' %}

{% block title %}Hello DoctorController!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="container">
            <h1>Reports</h1>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">Security Social Number</th>
                    <th scope="col">Show treatment</th>
                    <th scope="col">Delete a patient</th>
                </tr>
                </thead>
                <tbody>
                {% for patient in myPatients %}
                    <tr>
                        <a {{ path('drugs_new', {id:patient.id}) }}><th scope="row">{{ loop.index }}</th>
                        <td>{{ patient.name }}</td>
                        <td>{{ patient.address }}</td>
                        <td>{{ patient.socialNumber }}</td>
                        <td><a href="{{ path('drugs_show', {id:patient.id}) }}"><button type="button"> Show treatment </button></a></td>
                        <td> </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

