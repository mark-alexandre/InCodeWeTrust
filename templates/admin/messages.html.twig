{% extends 'admin/base.html.twig' %}

{% block title %}Doclib - Doctor workspace{% endblock %}

{% block body %}

    <!-- MAIN -->
    <div class="main">
        <!-- MAIN CONTENT -->
        <div class="main-content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-md-12">
                        <!-- RECENT USER SUBMISSION -->
                        <div class="panel">
                            <div class="panel-heading">
                                {% if messages is not empty %}
                                <h3 class="panel-title">Talks with {{ messages[0].patient.name }}</h3>
                                {% endif %}
                                <div class="right">
                                    <button type="button" class="btn-toggle-collapse"><i class="lnr lnr-chevron-up"></i></button>
                                    <button type="button" class="btn-remove"><i class="lnr lnr-cross"></i></button>
                                </div>
                            </div>
                            <div class="panel-body no-padding">
                                {% if messages is empty %}
                                <h4> Absence d'historique de conversation</h4>
                                {% endif %}
                                {% for message in messages %}
                                    {% if message.author is same as ('patient') %}
                                        <p>{{ message.patient.name }} says:</p>
                                    {% else %}
                                        <p>Your answer:</p>
                                    {% endif %}
                                    <div style="display: flex; flex-direction: row; align-content: center">
                                        <p class="label label-success"
                                           style="width:150px; padding-top: 5px">
                                            {{ message.date|date('d-m-y g:ia') }}</p>
                                        <p style="margin-left: 10px">{{ message.content }}</p>
                                    </div>

                                {% endfor %}
                                {{ include('messaging/_form.html.twig', {'button_label': 'Send'}) }}
                            </div>
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col-md-6"><span class="panel-note"><i class="fa fa-clock-o"></i> Last 24 hours</span></div>
                                    <div class="col-md-6 text-right"><a href="#" class="btn btn-primary">
                                            Check daily reports</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END RECENT USER'S SUBMISSIONS -->
                    </div>
                </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </div>
    <!-- END MAIN -->

{% endblock %}